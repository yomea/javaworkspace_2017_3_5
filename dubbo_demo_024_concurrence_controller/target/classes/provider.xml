<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
 
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="hello-world-app"  />
 
    <dubbo:registry id="serviceRegister" address="zookeeper://127.0.0.1:2181"  />
    	
    <!-- 用dubbo协议在20881端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20881" />
    
    <!-- delay="-1"，延时到spring初始化完成后提供服务。actives="10"配置最大连接请求数不超过十个，如果服务端也写了actives="10"，优先使用reference的 -->
    <dubbo:service delay="-1" interface="com.dubbo.api.BarServiceMock" ref="barService" actives="10">
    	<!-- 指定sayHello这个方法最大执行线程数为10 -->
    	<dubbo:method name="sayHello" executions="10"></dubbo:method>
    </dubbo:service>
    
    <!-- 和本地bean一样实现服务 -->
    <bean id="barService" class="com.dubbo.service.api.imp.BarServiceImpl" >
    </bean>
    
    
    
</beans>